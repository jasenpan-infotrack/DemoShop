@model IEnumerable<DemoShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h2>Product List</h2>

@foreach(var item in Model)
{
    <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border: 2px solid #ccc">
        <div class="col-md-12">
            <img class="img" src="~/Content/ProductImages/@item.Image" style="height:250px" />
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id=item.Id})</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Price</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to cart</a>
        </div>
    </div>
}

